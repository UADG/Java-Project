<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs211.project.controllers.CommentTeamController">
   <children>
      <ScrollPane fx:id="commentScrollPane" layoutX="138.0" layoutY="202.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="330.0" prefWidth="525.0" vvalue="1.0">
         <content>
            <TextFlow fx:id="commentTextFlow" translateX="15.0" translateY="15.0" />
         </content>
      </ScrollPane>
      <Label layoutX="143.0" layoutY="61.0" text="Event: ">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="back" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backOnClick" prefHeight="25.0" prefWidth="41.0" text="Back" />
      <TextField fx:id="commentTextField" layoutX="184.0" layoutY="550.0" prefHeight="25.0" prefWidth="398.0" promptText="send a message to team..." />
      <Button fx:id="sendClick" layoutX="603.0" layoutY="550.0" mnemonicParsing="false" onAction="#onSentAction" text="send" />
      <Label layoutX="401.0" layoutY="61.0" text="Choose Team:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="chooseTeam" layoutX="507.0" layoutY="58.0" prefWidth="150.0" />
      <Label fx:id="eventLabel" layoutX="191.0" layoutY="61.0" text="eventLabel">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TableView fx:id="activityTableView" layoutX="138.0" layoutY="92.0" prefHeight="102.0" prefWidth="525.0">
        <columns>
          <TableColumn prefWidth="85.0" text="Name" />
          <TableColumn prefWidth="78.0" text="Date" />
            <TableColumn prefWidth="101.0" text="Start-Time" />
            <TableColumn prefWidth="92.0" text="End-Time" />
            <TableColumn prefWidth="86.0" text="Team" />
            <TableColumn prefWidth="81.0" text="Status" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
